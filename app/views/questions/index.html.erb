<h1>Listing questions</h1>

<ul>
  <% @questions.each do |question| %>
    <li>
      <%= question.question %>
      <%= link_to 'Show', question %>
      <%= link_to 'Edit', edit_question_path(question) %>
      <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
      <ul>
        <% Answer.where(:question_id => question.id).each do |answer| %>
          <li>
            <%= answer.answer %>
          </li>
        <% end %>
        <li>
          <%= link_to('Add Answer', 'answers/new?question_id=' + question.id.to_s) %>
        </li>
      </ul>
    </li>
  <% end %>
  <li>
    <%= link_to 'Add Question', new_question_path %>
  </li>
</ul>

