<div class="container-fluid wrapper">    
  <div class="row">
    <div class="col-md-10 col-md-offset-1" style="margin-top: 10px;">
      <div class="row">
        <%= form_for(@program) do |f| %>
          <% if @program.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>

              <ul>
                <% @program.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="col-md-6 intro-text getlisted-general-info">
            <p id="intro-title-green">General information</p>
            <div class="form-group">
              <%= f.text_field :name, placeholder: 'Program/Organization URL' %>
            </div>
            <div class="form-group">
              <%= f.text_field :website, placeholder: 'Website URL' %>
            </div>
            <div class="form-group">
              <%= f.text_field :desc, placeholder: 'Description' %>
            </div>
          </div>
          <div class="col-md-6 intro-text"  id="home-survey">
            <p id="intro-title-orange">Choose your options</p>
            <% Question.all.each do |question| %>
              <div class="form-group">
                <div class="row">
                  <button type="button" class="btn btn-gray btn-lg btn-block survey-question-inactive"><%= question.question %></button>
                  <div class="col-md-12">
                    <div class="row survey-choice-box" >
                      <div class="" data-toggle="buttons">
                        <%= collection_check_boxes :question, question.id, question.answers, :id, :answer, include_hidden: false do |b| %>
                          <%= b.label(:"data-value" => b.value, class: "btn-lg btn-block btn label-choice btn-default" ) do %>
                            <%= b.check_box + b.text %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
